<?xml version="1.0" encoding="UTF-8"?>
<ExtensionList>
  <% for (var i = 0; i < build.extensions.length; i++) { %>
  <Extension Id="<%= build.extensions[i].id %>">
    <HostList>
      <!-- Photoshop -->
      <Host Name="PHXS" Port="<%= build.launch.hostPort + i %>"/>

      <!-- Illustrator -->
      <Host Name="ILST" Port="<%= build.launch.hostPort + i %>"/>

      <!-- InDesign -->
      <Host Name="IDSN" Port="<%= build.launch.hostPort + i %>" />

      <!-- Premiere -->
      <Host Name="PPRO" Port="<%= build.launch.hostPort + i %>" />

      <!-- PRELUDE -->
      <Host Name="PRLD" Port="<%= build.launch.hostPort + i %>" />

      <!-- FLASH Pro -->
      <Host Name="FLPR" Port="<%= build.launch.hostPort + i %>" />
    </HostList>
  </Extension>
  <% } %>
</ExtensionList>